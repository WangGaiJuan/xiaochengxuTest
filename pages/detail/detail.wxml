<!--pages/detail/detail.wxml-->
<view class='content'>
  <view class=''>
    <image src='{{movie.images.large}}' mode='aspectFit' />
  </view>
  <view class='hr' />
  <view class='detail'>
    <text>{{movie.text}}</text>
  </view>

  <view class='casts'>
    <block wx:for="{{movie.casts}}">
      <image src='{{item.avatars.medium}}' mode='aspectFit' />
    </block>
  </view>
  <view class='hr' />
  <view class='detail'>
    <text>{{movie.summary}}</text>
  </view>
</view>